.preview-profile
  position: relative
  overflow: hidden
  &:hover
    .information-wrap
      bottom: 0
    .information
      height: 100px !important
  .information-wrap
    position: absolute
    left: 0
    right: 0
    bottom: -38px
    +transition(bottom, .5s, ease)
    .triangle-wrap
      position: relative
      overflow: hidden
      height: 10px
      width: 100%
      opacity: .8
      .triangle
        border: 10px solid #2E2E36
        border-bottom: none
        border-color: transparent #2E2E36 transparent
        position: relative
        left: 30px
        -webkit-transform: translateX(-50%)
        -moz-transform: translateX(-50%)
        -ms-transform: translateX(-50%)
        -o-transform: translateX(-50%)
        transform: translateX(-50%)
        position: absolute
        top: 0
        z-index: 11
        &:before, &:after
          right: 10px
          width: 360px
        &:before
          content: ""
          position: absolute
          z-index: 11
          height: 10px
          top: -10px
          background: #2E2E36
        &:after
          content: ""
          position: absolute
          z-index: 11
          height: 10px
          top: -10px
          right: -370px
          background: #2E2E36

    .information
      height: 63px
      width: 100%
      background: rgba(46, 46, 54, .80)
      padding: 0 14px
      +transition(height, .4s, ease)
      .title
        h4
          font:
            size: rem-calc(27)
            family: 'Fira Sans', sans-serif
          color: #EDF0F1
          line-height: rem-calc(32)
          margin: 0
          padding: 0
      .info
        p
          color: #96D03F
          font:
            size: rem-calc(14)
            family: 'Fira Sans', sans-serif
          line-height: rem-calc(16,8)
          margin: 0
          padding: 0
          span
            color: #EDF0F1

      .actions
        .action-button
          width: 30px
          height: 25px
          display: inline-block
          margin-right: 18px
          object
            width: 100%
            height: 100%

    .status
      height: 44px
      position: relative
      width: 100%
      background-color: #96D03F
      &:before
        content: 'online'
        position: absolute
        left: 13px
        line-height: rem-calc(44)
        font:
          size: rem-calc(28)
          family: 'Fira Sans', sans-serif
        text-transform: uppercase
        color: #EDF0F1
      &:after
        content: ''
        display: block
        position: absolute
        top: -15px
        right: 0
        width: 0px
        height: 0px
        border-style: solid
        border-width: 0 0 15px 15px
        border-color: transparent transparent #96d03f transparent
  &.offline
    .information
      .info
        p
          color: #D03F4A
    .status
      height: 44px
